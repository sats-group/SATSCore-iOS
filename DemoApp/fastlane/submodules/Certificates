lane :cert_dev do
  match(type: "development", force_for_new_devices: true, app_identifier: [
    "com.sats.satscore.demo-app"
  ])
end

lane :cert_dist do
  match(type: "appstore", readonly: is_ci, app_identifier: [
    "com.sats.satscore.demo-app"
  ])
end

lane :setup_certificates_and_profiles do
  cert_dev
  cert_dist
end